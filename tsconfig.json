{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "target": "ES6",
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": false,
        "listFiles": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "lib": [ "es5", "es6", "es7",
        "es2015", "es2016",
        "es2017", "es2018",
        "esnext" ],

"moduleResolution": "Node",
"declaration": true,
"declarationMap": true,
"inlineSourceMap": true,
"inlineSources": true,

      
    },
    "exclude": [
        "node_modules",
        "tasks",
        "dist",
        "gulpfile.js",
        "src/resources/swagger",
        "src/app/test",
        "testcases"
    ]
}
